<ul class="list-group">
  <% person.attribute_names.reject { |a|
    %w(created_at updated_at applicant_id id).include? a
  }.each do |attribute_name| %>
    <% case attribute_name %>
    <% when 'mail_address_id' %>
      <%= render partial: 'maybe', locals: { attribute: "Address", object: person.mail_address.full } %>
    <% when 'dob' %>
      <%= render partial: 'maybe', locals: { attribute: "Date of birth", object: person.dob_date } %>
    <% else %>
      <%= render partial: 'maybe', locals: { attribute: attribute_name.humanize, object: person[attribute_name] } %>
    <% end %>
  <% end %>
</ul>
