<%= builder.date_field :dob, label: "Date of birth" %>
<%= builder.collection_select :marital_status, ["", "Never married", "Married", "Widowed", "Divorced"], :to_s, :to_s %>
<%= builder.collection_select :student_status, ["", "Full-time", "Part-time", "Not a student"], :to_s, :to_s %>
<% %i(
  gender
  race
  citizenship
  nationality
  occupation
  city_of_birth
  state_of_birth
  driver_license_number
  driver_license_state
).each do |person_attribute| %>
  <%= builder.text_field person_attribute %>
<% end %>
