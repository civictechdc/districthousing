<%= builder.date_field :dob, label: "Date of birth" %>
<%= builder.collection_select :marital_status, marital_statuses, :to_s, :to_s, include_blank: true %>
<%= builder.collection_select :student_status, student_statuses, :to_s, :to_s, include_blank: true %>
<%= builder.collection_select :gender, genders, :to_s, :to_s, include_blank: true %>
<%= builder.collection_select :ethnicity, Constants::Ethnicity.all, :name_db, :name_form, include_blank: true %>
<%= builder.collection_select :race, Constants::Race.all, :name_db, :name_form, include_blank: true %>
<%= builder.collection_select :driver_license_state, us_states, :last, :first %>
<%= builder.collection_select :state_of_birth, us_states, :last, :first %>
<%= builder.collection_select :country_of_birth, countries, :to_s, :to_s %>
<%= builder.collection_select :citizenship, countries, :to_s, :to_s %>

<% %i(
  occupation
  city_of_birth
  driver_license_number
).each do |person_attribute| %>
  <%= builder.text_field person_attribute %>
<% end %>
