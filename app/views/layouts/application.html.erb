<!DOCTYPE html>
<html>
<head>
  <title>DchousingApps</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <link rel="stylesheet" id="tw-bootstrap-css" href="http://ouzy.co/wp-content/themes/the-bootstrap/css/bootstrap.min.css?ver=2.0.3" type="text/css" media="all">
  <script src="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/js/bootstrap.min.js" type="text/javascript"></script>
  <%= csrf_meta_tags %>
</head>

<body>
<div class="fluid-container">
	<div class ="row-fluid">
		<div id="sidebar" class="span2">
			<div class="logo"></div>

			<div class="button-group">
			  <div class="side-button"><div class="button-text"><%= link_to content_tag(:div, "Home"), root_path %></div></div>
			  <div class="side-button"><div class="button-text"><%= link_to content_tag(:div, "Apply"), new_user_registration_path %></div></div>
			  <div class="side-button"><div class="button-text"><%= link_to content_tag(:div, "About"), about_path %></div></div>
			  <div id="login-button" class="side-button"><div class="button-text"><%= link_to content_tag(:div, "Login"), :id => "myModal" %></div></div>
			</div>

		</div>

		<div class="span10 main">
			
			<!--<a href="#myModal" role="button" class="btn" data-toggle="modal">Launch demo modal</a>-->
			 
			<!-- Modal -->
			<div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
			  <div class="modal-header">
			    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
			    <h3 id="myModalLabel">Modal header</h3>
			  </div>
			  <div class="modal-body">
			    <p>One fine body…</p>
			  </div>
			  <div class="modal-footer">
			    <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
			    <button class="btn btn-primary">Save changes</button>
			  </div>
			</div>

					<%= yield %>


		</div>
	</div>
</div>
</body>
</html>