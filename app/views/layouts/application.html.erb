<!DOCTYPE html>
<html>
<head>
  <title><%= content_for?(:title) ? content_for(:title) : "District Housing" %></title>
  <meta name="viewport" content="initial-scale=1">

  <!-- font awesome for UI icons -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">

  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>

</head>

<body>

  <% if current_user %>
    <%= render "layouts/navbar" %>
  <% end %>

  <!-- on user sign-in, main wrapper adds padding for navbar -->
  <div class="main-wrapper <%= 'main-wrapper-pad' if current_user %>">

    <div id="page-dashboard">
      <% if flash[:alert] %>
        <p class="bg-danger"></p>
        <div class="alert alert-danger alert-dismissible" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <%= flash[:alert] %>
        </div>
      <% end %>

      <% if flash[:notice] %>
        <p class="bg-danger"></p>
        <div class="alert alert-info alert-dismissible" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <%= flash[:notice] %>
        </div>
      <% end %>

      <%= yield %>
    </div>

  </div>

  <%= image_tag "district-housing-logo-small.png", class: "center-block footer-logo" %>
  <script src="https://maps.googleapis.com/maps/api/js" type="text/javascript"></script>
  <%= yield :javascript %>

</body>
</html>
