<p id="notice"><%= notice %></p>

<ol class="breadcrumb">
  <li><%= link_to current_user.email, root_path %></li>
  <li><%= @applicant.description %></li>
</ol>

<div class="row">
  <h2>Applicant</h2>
  <%= render partial: 'people/summary', locals: { person: @applicant.identity } %>
  <%= link_to "Edit", edit_person_path(@applicant.identity), class: "btn btn-info"%>
</div>

<div class="row">
  <h2>Household members</h2>
  <% @applicant.household_members_people.each do |h| %>
    <div class="col-md-4">
      <p>
      <%= render partial: 'people/summary', locals: { person: h } %>
      <%= link_to "Edit", edit_person_path(h), class: "btn btn-info"%>
      <%= link_to 'Delete', h, method: :delete, class: "btn btn-danger", data: { confirm: 'Are you sure?' } %>
      </p>
    </div>
  <% end %>
</div>
<% render partial: 'structure', locals: { path: "new_household_member_path" } %>


