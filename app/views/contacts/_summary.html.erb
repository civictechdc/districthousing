<ul class="list-group">
  <%= render 'maybe', attribute: "Name", object: contact.person.full_name %>
  <%= render partial: 'maybe', locals: { attribute: 'Relationship', object: contact.relationship } %>
  <%= render 'maybe', attribute: "Address", object: contact.person.mail_address.full %>
  <% %w(cell_phone home_phone work_phone email).each do |attribute_name| %>
    <%= render 'maybe', attribute: attribute_name.humanize, object: contact.person[attribute_name] %>
  <% end %>
</ul>

